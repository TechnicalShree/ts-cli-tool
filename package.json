{
  "name": "@technicalshree/auto-fix",
  "version": "1.1.0",
  "description": "Detect, diagnose, and safely fix common local dev environment issues",
  "main": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TechnicalShree/ts-cli-tool.git"
  },
  "homepage": "https://github.com/TechnicalShree/ts-cli-tool#readme",
  "bugs": {
    "url": "https://github.com/TechnicalShree/ts-cli-tool/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "auto-fix": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "npm run build --silent && node --test",
    "lint": "tsc --noEmit",
    "prepack": "npm run build",
    "prepublishOnly": "npm run lint && npm test"
  },
  "keywords": [
    "auto-fix",
    "autofix",
    "cli",
    "developer-tools",
    "dev-environment",
    "environment-fix",
    "doctor",
    "diagnostics",
    "troubleshooting",
    "local-development",
    "nodejs",
    "python",
    "docker",
    "devops",
    "automation",
    "productivity"
  ],
  "author": "Krushna Raut",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
